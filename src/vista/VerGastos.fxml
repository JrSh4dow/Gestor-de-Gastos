<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="Caja" prefHeight="450.0" prefWidth="700.0" styleClass="background" stylesheets="@../estilos/Main.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controlador.VerGastoController">
   <top>
      <MenuBar prefHeight="26.0" prefWidth="157.0" style="-fx-border-color: #ffffff; -fx-border-radius: 3; -fx-border-width: 2; -fx-background-color: #00C1A4;" BorderPane.alignment="CENTER">
         <menus>
            <Menu mnemonicParsing="false" text="Acount">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#TerminarSesion" text="Log out">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="W" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
               </items>
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/Acount.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Menu>
         </menus>
      </MenuBar>
   </top>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <left>
      <VBox alignment="CENTER" prefHeight="294.0" prefWidth="140.0" spacing="10.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets left="8.0" right="3.0" />
         </padding>
         <children>
            <Button id="button" fx:id="Inicio" mnemonicParsing="false" onAction="#IrInicio" prefHeight="40.0" prefWidth="200.0" text="Inicio">
               <font>
                  <Font name="FiraCode Nerd Font Bold" size="12.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/inicio.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button id="button" fx:id="Perfil" mnemonicParsing="false" onAction="#VerPerfil" prefHeight="40.0" prefWidth="200.0" text="Ver perfil">
               <font>
                  <Font name="FiraCode Nerd Font Bold" size="12.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/perfil.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button id="button" fx:id="añadirGasto" focusTraversable="false" mnemonicParsing="false" onAction="#AñadirGasto" prefHeight="40.0" prefWidth="200.0" text="Añadir gasto">
               <font>
                  <Font name="FiraCode Nerd Font Bold" size="12.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/gasto.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button id="buttonDisable" focusTraversable="false" mnemonicParsing="false" prefHeight="40.0" prefWidth="200.0" text="Ver gastos">
               <font>
                  <Font name="FiraCode Nerd Font Bold" size="12.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/historial.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </VBox>
   </left>
   <center>
      
   </center>
   <center>
      <TableView fx:id="Gastos" style="-fx-background-color: lightgray;" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="idGasto" editable="false" minWidth="7.0" prefWidth="-1.0" sortable="false" text="Id" />
                <TableColumn fx:id="nombreGasto" editable="false" prefWidth="-1.0" sortable="false" text="Nombre" />
                <TableColumn fx:id="descripcionGasto" editable="false" minWidth="13.0" prefWidth="-1.0" sortable="false" text="Descripción" />
                <TableColumn fx:id="categoriaGasto" editable="false" minWidth="13.0" prefWidth="-1.0" sortable="false" text="Categoría" />
                <TableColumn fx:id="costeGasto" editable="false" prefWidth="-1.0" sortable="false" text="Coste" />
                <TableColumn fx:id="unidadesGasto" editable="false" prefWidth="-1.0" sortable="false" text="Unidades" />
                <TableColumn fx:id="facturaGasto" editable="false" prefWidth="-1.0" sortable="false" text="Factura" />
        </columns>
         <BorderPane.margin>
            <Insets bottom="10.0" left="4.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <right>
       <VBox alignment="TOP_CENTER" maxHeight="125.0" spacing="20.0" styleClass="Vbox" BorderPane.alignment="TOP_CENTER">
         <children>
            <Button id="button" fx:id="modificarGasto" mnemonicParsing="false" onAction="#ModificarGasto">
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/editar.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button id="button" fx:id="eliminarGasto" mnemonicParsing="false" onAction="#EliminarGasto">
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/eliminar.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button id="button" fx:id="imprimirGastos" mnemonicParsing="false" onAction="#ImprimirGastos">
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/imprimir.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets right="10.0" top="10.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </right>
</BorderPane>
